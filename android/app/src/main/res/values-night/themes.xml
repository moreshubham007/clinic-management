<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hospital" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/black</item>
        <item name="colorSurface">#121212</item>
        <item name="colorOnSurface">@color/white</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#B3FFFFFF</item>
        <item name="android:textColorHint">#80FFFFFF</item>
        
        <!-- Ripple effect -->
        <item name="colorControlHighlight">@color/purple_200</item>
        
        <!-- Card and surface styling -->
        <item name="materialCardViewStyle">@style/Widget.Hospital.CardView</item>
        <item name="chipStyle">@style/Widget.Hospital.Chip</item>
    </style>

    <!-- Card style -->
    <style name="Widget.Hospital.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">#1F1F1F</item>
    </style>

    <!-- Chip style -->
    <style name="Widget.Hospital.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">#1F1F1F</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>
</resources>